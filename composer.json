{
    "name": "ghi/control-maquinaria",
    "description": "Aplicacion para Control de Maquinaria Grupo Hermes Infraestructura.",
    "keywords": ["hermes", "sao", "ghi", "maquinaria"],
	"license": "MIT",
	"type": "project",
    "version": "0.0.0",
    "homepage": "http://www.grupohi.mx",
    "authors": [
      {
        "name": "Uziel Bueno",
        "email": "UBueno@grupohi.mx",
        "role": "Developer"
      },
      {
        "name": "Ernesto Valdes",
        "email": "EValdes@grupohi.mx",
        "role": "Developer"
      }
    ],
	"require": {
		"laravel/framework": "5.0.*",
        "laravelcollective/html": "~5.0",
        "laracasts/flash": "1.3.*",
        "laracasts/presenter": "~0.2",
        "caouecs/laravel4-lang": "dev-laravel5"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
        "laracasts/generators": "~1.1",
        "fzaninotto/faker": "1.*"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Ghi\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}

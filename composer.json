{
    "name": "ghi/control-maquinaria",
    "description": "Aplicacion para el control de las actividades de maquinaria.",
    "keywords": ["hermes", "sao", "ghi", "maquinaria", "grupohi"],
	"license": "MIT",
	"type": "project",
    "homepage": "http://www.grupohi.mx",
    "authors": [
      {
        "name": "Uziel Bueno",
        "email": "UBueno@grupohi.mx",
        "role": "Developer"
      },
      {
        "name": "Ernesto Valdes",
        "email": "EValdes@grupohi.mx",
        "role": "Developer"
      }
    ],
	"require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "laravelcollective/html": "~5.0",
        "laracasts/flash": "1.3.*",
        "laracasts/presenter": "~0.2",
        "league/fractal": "0.12.*",
        "caouecs/laravel4-lang": "~2.0",
        "ghi/laravel-intranet-auth": "^1.1"
    },
	"require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "laracasts/generators": "^1.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Ghi\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
    "scripts": {
      "post-install-cmd": [
          "php artisan clear-compiled",
          "php artisan optimize"
      ],
      "pre-update-cmd": [
          "php artisan clear-compiled"
      ],
      "post-update-cmd": [
          "php artisan optimize"
      ],
      "post-root-package-install": [
          "php -r \"copy('.env.example', '.env');\""
      ],
      "post-create-project-cmd": [
          "php artisan key:generate"
      ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
